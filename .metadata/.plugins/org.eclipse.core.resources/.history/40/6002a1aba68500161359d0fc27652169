package com.parents;

import java.util.Scanner;

public class App {
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Welcome to Adventure Game\n"
				+"Would you like to play as a\n"
				+"1. Human Paladin\n"
				+"2. Elf Mage\n"
				+"3. Dwarf Ranger\n"
				+"4. Orc Warrior\n"
				+"5. Halfling Thief"
				);
		
		String userInput = sc.nextLine();
		
		switch (userInput) {
		case "1":
			//Call to humanPaladin methods here
			break;
		case "2":
			//Call to elfMage methods here
			break;
		case "3":
			//Call to dwarfRanger methods here
			break;
		case "4":
			//Call to orcWarrior methods here
			break;
		case "5":
			//Call to halflingThief methods here
			break;
		default:
			
			break;
		}
	}

}
